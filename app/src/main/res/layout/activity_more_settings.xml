<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:id="@+id/activity_more_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        tools:context=".ActivitySettingsMore">

        <!-- Pill Header -->
        <LinearLayout style="@style/PillHeader">
            <TextView
                style="@style/PillHeaderTitle"
                android:text="@string/pref_more_tv_settings_more_title" />
        </LinearLayout>

        <!-- DATA -->
        <TextView
            style="@style/SectionHeader"
            android:text="DATA" />

        <LinearLayout style="@style/ItemPill">
            <Button
                android:id="@+id/pref_more_bt_save"
                style="@style/ItemPillText"
                android:background="@android:color/transparent"
                android:gravity="start|center_vertical"
                android:text="SAVE KEYBOARD DATA"
                android:textColor="@color/textPrimary"
                android:textAllCaps="false" />
            <TextView style="@style/Chevron" android:text="\u203A" />
        </LinearLayout>

        <!-- SEARCH PLUGINS -->
        <TextView
            style="@style/SectionHeader"
            android:text="@string/pref_more_tv_search_plugins_title" />

        <LinearLayout style="@style/ItemPill">
            <Button
                android:id="@+id/pref_more_bt_save_search_plugins"
                style="@style/ItemPillText"
                android:background="@android:color/transparent"
                android:gravity="start|center_vertical"
                android:text="SAVE PLUGIN DATA"
                android:textColor="@color/textPrimary"
                android:textAllCaps="false" />
            <TextView style="@style/Chevron" android:text="\u203A" />
        </LinearLayout>

        <LinearLayout style="@style/ItemPill">
            <Button
                android:id="@+id/btn_sys_kb_accessibility_setting"
                style="@style/ItemPillText"
                android:background="@android:color/transparent"
                android:gravity="start|center_vertical"
                android:text="@string/main_btn_sys_kb_accessibility_setting_enabled"
                android:textColor="@color/textPrimary"
                android:textAllCaps="false" />
            <TextView style="@style/Chevron" android:text="\u203A" />
        </LinearLayout>

        <!-- JS PATCHES -->
        <TextView
            style="@style/SectionHeader"
            android:text="@string/pref_more_tv_js_patches_title" />

        <!-- Container for dynamic JS patch switches -->
        <LinearLayout
            android:id="@+id/container_js_patches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Placeholder for first JS patch (hidden, used by Java code) -->
        <Switch
            android:id="@+id/default_js_patch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:visibility="gone"
            tools:checked="false" />

    </LinearLayout>
</ScrollView>
