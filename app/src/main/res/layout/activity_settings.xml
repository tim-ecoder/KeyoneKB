<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appBackgroundColor">

    <LinearLayout
        android:id="@+id/activity_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        tools:context=".ActivitySettings">

        <!-- Pill Header -->
        <LinearLayout style="@style/PillHeader">
            <TextView
                style="@style/PillHeaderTitle"
                android:text="Settings" />
        </LinearLayout>

        <!-- KEYBOARD LAYOUTS -->
        <TextView
            android:id="@+id/text_keyboard_layouts"
            style="@style/SectionHeader"
            android:text="@string/pref_keyboard_layouts" />

        <!-- Container for dynamic keyboard layout switches -->
        <LinearLayout
            android:id="@+id/container_keyboard_layouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Placeholder for first keyboard layout (hidden, used by Java code) -->
        <Switch
            android:id="@+id/default_keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:visibility="gone"
            tools:checked="false" />

        <!-- INPUT -->
        <TextView
            style="@style/SectionHeader"
            android:text="INPUT" />

        <!-- Sensitivity seekbar pill -->
        <LinearLayout style="@style/ItemPillSeek">
            <TextView
                style="@style/ItemPillSeekTitle"
                android:text="@string/pref_p_1_name" />
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="10"
                android:progressTint="@color/colorPrimary"
                android:thumbTint="@color/colorPrimary" />
            <TextView
                android:id="@+id/textViewSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pref_p_1_value"
                android:textAlignment="center"
                android:textColor="?attr/textSecondaryColor"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Toast language switch pill -->
        <Switch
            android:id="@+id/toast_show_lang"
            style="@style/SwitchPill"
            android:text="@string/pref_p_2_name" />

        <!-- ALT space switch pill -->
        <Switch
            android:id="@+id/switch_alt_space"
            style="@style/SwitchPill"
            android:text="@string/pref_p_3_name"
            tools:checked="true" />

        <!-- Flag display switch pill -->
        <Switch
            android:id="@+id/switch_flag"
            style="@style/SwitchPill"
            android:text="@string/pref_p_4_name"
            tools:checked="false" />

        <!-- Long press ALT switch pill -->
        <Switch
            android:id="@+id/switch_long_press_alt"
            style="@style/SwitchPill"
            android:text="@string/pref_p_5_name"
            tools:checked="true" />

        <!-- PHONE & SYSTEM -->
        <TextView
            style="@style/SectionHeader"
            android:text="PHONE &amp; SYSTEM" />

        <!-- Phone Call Management switch pill -->
        <Switch
            android:id="@+id/switch_manage_call"
            style="@style/SwitchPill"
            android:text="@string/pref_p_6_name"
            tools:checked="true" />

        <!-- Notification icon switch pill -->
        <Switch
            android:id="@+id/switch_notification_icon_system"
            style="@style/SwitchPill"
            android:text="@string/pref_p_10_name"
            tools:checked="true" />

        <!-- Vibration switch pill -->
        <Switch
            android:id="@+id/switch_vibrate_on_key_down"
            style="@style/SwitchPill"
            android:text="@string/pref_p_11_name"
            tools:checked="true" />

        <!-- Text safety switch pill -->
        <Switch
            android:id="@+id/switch_ensure_entered_text"
            style="@style/SwitchPill"
            android:text="@string/pref_p_12_name"
            tools:checked="true" />

        <!-- ON-SCREEN PANEL -->
        <TextView
            style="@style/SectionHeader"
            android:text="ON-SCREEN PANEL" />

        <!-- Panel button size seekbar pill -->
        <LinearLayout style="@style/ItemPillSeek">
            <TextView
                style="@style/ItemPillSeekTitle"
                android:text="@string/pref_p_7_name" />
            <SeekBar
                android:id="@+id/seekBarBtnPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="10"
                android:progressTint="@color/colorPrimary"
                android:thumbTint="@color/colorPrimary" />
            <TextView
                android:id="@+id/textViewBtnPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pref_p_7_value"
                android:textAlignment="center"
                android:textColor="?attr/textSecondaryColor"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Show default on-screen keyboard switch pill -->
        <Switch
            android:id="@+id/switch_show_default_onscreen_keyboard"
            style="@style/SwitchPill"
            android:text="@string/pref_p_8_name"
            tools:checked="true" />

        <!-- Nav pad on hold switch pill -->
        <Switch
            android:id="@+id/switch_p14_nav_pad_on_hold"
            style="@style/SwitchPill"
            android:text="@string/pref_p_14_name"
            tools:checked="true" />

        <!-- GESTURES -->
        <TextView
            style="@style/SectionHeader"
            android:text="GESTURES" />

        <!-- Gesture mode spinner pill -->
        <LinearLayout style="@style/ItemPillSpinner">
            <TextView
                android:id="@+id/text_title_p9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/textPrimaryColor"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"
                android:text="@string/pref_p9_gesture_modes_title" />
            <Spinner
                android:id="@+id/static_spinner_p9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />
        </LinearLayout>

        <!-- Pointer mode rectangle switch pill -->
        <Switch
            android:id="@+id/switch_pointer_mode_rect"
            style="@style/SwitchPill"
            android:text="@string/pref_p_13_name"
            tools:checked="true" />

        <!-- Pointer rectangle color picker pill -->
        <LinearLayout style="@style/ItemPill">
            <TextView
                    android:id="@+id/button_pointer_mode_rect_color_picker"
                    style="@style/ItemPillText"
                    android:gravity="start|center_vertical"
                    android:text="@string/pref_p_13a_name"
                    android:textColor="?attr/textPrimaryColor" />
            <View
                    android:id="@+id/color_swatch_p13a"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_badge_circle" />
        </LinearLayout>

        <!-- APPEARANCE -->
        <TextView
            style="@style/SectionHeader"
            android:text="@string/pref_section_appearance" />

        <Switch
            android:id="@+id/switch_light_theme"
            style="@style/SwitchPill"
            android:text="@string/pref_light_theme"
            tools:checked="false" />


        <!-- BACKUP -->
        <TextView
            style="@style/SectionHeader"
            android:text="@string/pref_section_backup" />

        <LinearLayout style="@style/ItemPill">
            <Button
                android:id="@+id/button_save_settings"
                style="@style/ItemPillText"
                android:background="@android:color/transparent"
                android:gravity="start|center_vertical"
                android:text="@string/pref_save_settings"
                android:textColor="?attr/textPrimaryColor"
                android:textAllCaps="false" />
            <TextView style="@style/Chevron" android:text="\u2913" />
        </LinearLayout>

        <LinearLayout style="@style/ItemPill">
            <Button
                android:id="@+id/button_load_settings"
                style="@style/ItemPillText"
                android:background="@android:color/transparent"
                android:gravity="start|center_vertical"
                android:text="@string/pref_load_settings"
                android:textColor="?attr/textPrimaryColor"
                android:textAllCaps="false" />
            <TextView style="@style/Chevron" android:text="\u2912" />
        </LinearLayout>

        <!-- Wiki link -->
        <TextView
            android:id="@+id/text_manual_link"
            style="@style/LinkText"
            android:text="@string/pref_manual_link" />

    </LinearLayout>
</ScrollView>
